{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "forin": false,
    "no-console": [
      true,
      "log"
    ],
    "no-empty": {
      "severity": "warning"
    },
    "no-unused-variable": [
      true
    ],
    "semicolon": [
      true,
      "always"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always"
      }
    ],
    "ordered-imports": [
      true,
      {
        "grouped-imports": true
      }
    ],
    "no-shadowed-variable": [
      true,
      {
        "underscore": false
      }
    ]
  }
}
