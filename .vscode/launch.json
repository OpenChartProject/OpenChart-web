{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Tests",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/.bin/mocha",
            "args": [
                "--reporter",
                "min"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
        }
    ]
}
