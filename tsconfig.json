{
  "include": [
    "./client/src/**/*.ts",
    "./client/src/**/*.tsx"
  ],
  "compilerOptions": {
    "types": [
      "mocha",
    ],
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2018"
    ],
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true
  }
}
